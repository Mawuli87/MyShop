<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.messieyawo.myshopapp.fragments.shop.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.messieyawo.myshopapp.fragments.shop.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.messieyawo.myshopapp.fragments.shop.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.messieyawo.myshopapp.fragments.shop.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/productsDetailFragment"
        android:name="com.messieyawo.myshopapp.fragments.shop.ProductsDetailFragment"
        android:label="fragment_products_detail"
        tools:layout="@layout/fragment_products_detail" >
        <argument
            android:name="products"
            app:argType="com.messieyawo.myshopapp.data.Product" />
    </fragment>
    <fragment
        android:id="@+id/mainCategoryFragment"
        android:name="com.messieyawo.myshopapp.fragments.categories.MainCategoryFragment"
        android:label="fragment_main_category"
        tools:layout="@layout/fragment_main_category" >
        <action
            android:id="@+id/action_mainCategoryFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
    </fragment>
</navigation>